tls:
  stores:
    default:
      defaultCertificate:
        certFile: /etc/traefik/certs/server.crt
        keyFile: /etc/traefik/certs/server.key

http:
  routers:
    node-exporter:
      rule: "Host(`node-exp.${INTERNAL_DOMAIN}`)"
      service: node-exporter
      entryPoints:
        - metrics
      middlewares:
        - traefik-auth
  
  middlewares:
    traefik-auth:
      basicAuth:
        usersFile: "/htpasswd"
  
  services:
    node-exporter:
      loadBalancer:
        servers:
          - url: "http://${HOST_IP}:9100"
